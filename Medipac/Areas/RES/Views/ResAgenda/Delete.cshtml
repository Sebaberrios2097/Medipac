@model Medipac.Areas.RES.Data.DTO.DtoResAgenda

<h2>Eliminar Cita Médica</h2>

<p>¿Está seguro de que desea eliminar esta cita?</p>

<div>
    <h3>@Model.Fecha.ToShortDateString() - @Model.HoraInicio - @Model.HoraFin</h3>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IdAgenda" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="/RES/ResAgenda/Index" class="btn btn-secondary">Cancelar</a>
</form>