@model Medipac.Areas.RES.Data.DTO.DtoResAgenda

@{
    ViewData["Title"] = "Detalles de la Disponibilidad";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header">
            <h5>Información de Disponibilidad</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label"><strong>Fecha:</strong></label>
                <p class="form-control-plaintext">@Model.Fecha.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Hora de Inicio:</strong></label>
                <p class="form-control-plaintext">@Model.HoraInicioDisplay</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Hora de Fin:</strong></label>
                <p class="form-control-plaintext">@Model.HoraFinDisplay</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Disponible:</strong></label>
                <p class="form-control-plaintext">@Model.Disponible</p>
            </div>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Index", "ResAgenda")" class="btn btn-secondary">Volver</a>
            <a href="@Url.Action("Edit", "ResAgenda", new { id = Model.IdAgenda })" class="btn btn-primary">Editar</a>
        </div>
    </div>
</div>
