@model IEnumerable<Medipac.Areas.RES.Data.DTO.DtoResAgenda>

<div class="container">
    <h2>Citas Médicas Agendadas</h2>

    <a href="/RES/ResAgenda/Create" class="btn">Nueva Cita</a>

    @foreach (var cita in Model)
    {
        <div class="cita-card">
            <h3>Cita Médica con el médico de Id @cita.IdMedico</h3>
            <div class="cita-info">
                <span><strong>Fecha:</strong> @cita.Fecha.ToShortDateString()</span>
                <span><strong>Hora:</strong> @cita.HoraInicio - @cita.HoraFin</span>
                <span><strong>Estado:</strong> @(cita.Disponible ? "Disponible" : "No Disponible")</span>
            </div>
            <a href="@Url.Action("Edit", "ResAgenda", new { id = cita.IdAgenda})" class="btn-info">Editar</a>
            <a href="@Url.Action("Delete", "ResAgenda", new { id = cita.IdAgenda})" class="btn-danger">Eliminar</a>
        </div>
    }
</div>

