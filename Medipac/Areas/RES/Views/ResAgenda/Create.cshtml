@model Medipac.Areas.RES.Data.DTO.DtoResAgenda

@{
    ViewData["Title"] = "Agregar Agenda";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>

<hr />

@using (Html.BeginForm("Create", "ResAgenda"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdAgenda)

    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Formulario de Agenda</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.IdMedico)
                    @Html.EditorFor(model => model.IdMedico, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @placeholder = "ID del Médico"
                            }
                        })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.Fecha)
                    @Html.EditorFor(model => model.Fecha, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @type = "date"
                            }
                        })
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    @Html.LabelFor(model => model.HoraInicio)
                    @Html.EditorFor(model => model.HoraInicio, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @placeholder = "Hora de Inicio"
                            }
                        })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.HoraFin)
                    @Html.EditorFor(model => model.HoraFin, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @placeholder = "Hora de Fin"
                            }
                        })
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    @Html.LabelFor(model => model.Disponible)
                    @Html.CheckBoxFor(model => model.Disponible, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-check-input"
                            }
                        })
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="@Url.Action("Index","ResAgenda")" class="btn btn-secondary">Volver</a>
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-primary" value="Guardar">
                </div>
            </div>
        </div>
    </div>
}
