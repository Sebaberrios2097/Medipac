@model Medipac.Areas.RES.Data.DTO.DtoResMedicoEspecialidad

@using (Html.BeginForm("Create", "ResMedicoEspecialidad"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdMedicoEspecialidad)

    <div class="modal-body">
        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            @Html.DropDownListFor(model => model.IdMedico, (SelectList)ViewBag.Medico, "Seleccione...", new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="Especialidad" class="form-label">Nombre</label>
            @Html.DropDownListFor(model => model.IdEspecialidad, (SelectList)ViewBag.Especialidad, "Seleccione...", new { @class = "form-control" })
        </div>
    </div>

    <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <input type="submit" class="btn btn-primary" value="Guardar" />
    </div>
}
