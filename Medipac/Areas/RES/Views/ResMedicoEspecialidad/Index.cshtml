@model IEnumerable<Medipac.Areas.RES.Data.DTO.DtoResMedicoEspecialidad>

@{
	ViewData["Tittle"] = "Especialidades por Médico";
	Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Tittle"]</h1>

<hr />

<div class="card shadow-lg">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h5 class="card-title mb-0">Médicos por especialidad</h5>
		<a id="BtnAgregar" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Enlazar Médico-Especialidad
		</a>
	</div>
	<div class="card-body">
		<table id="myTable" class="table table-striped table-hover">
			<thead class="table-dark">
				<tr>
					<th>Nombre</th>
					<th>Estado</th>
					<th class="text-center">Acciones</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@(item.DtoCliMedico.Nombres ?? "Desconocido")</td>
						<td>@(item.DtoResEspecialidades.Nombre ?? "Desconocido")</td>

						<td class="text-center">
							<a href="javascript:void(0);"
							   onclick="ModalGeneral('Editar Especialidad', '@Url.Action("Edit", "ResMedicoEspecialidad", new { id = @item.IdMedicoEspecialidad })');"
							   class="btn btn-outline-primary btn-sm me-2">
								<i class="bi bi-pencil-square"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="card-footer text-muted text-center">
		@* Total de Especialidades: @Model.Count() *@
	</div>
</div>

<script>
	var table = new DataTable('#myTable', {
		language: {
			url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-CL.json',
		},
	});
	$("#BtnAgregar").click(function () {
		ModalGeneral('Crear Especialidad', '@Url.Action("Create", "ResMedicoEspecialidad")');
	});
</script>
