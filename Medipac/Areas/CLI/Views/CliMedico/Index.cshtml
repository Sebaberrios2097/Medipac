@model IEnumerable<Medipac.Areas.CLI.Data.DTO.DtoCliMedico>

@{
	ViewData["Tittle"] = "Médicos Registrados";
	Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Tittle"]</h1>

<hr />

<div class="card shadow-lg">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h5 class="card-title mb-0">Listado de Médicos</h5>
        <a id="BtnAgregar" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Agregar Médico
		</a>
	</div>
	<div class="card-body">
        <div class="table-responsive">
            <table id="myTable" class="table table-striped table-hover">
                <thead>
                    <tr>

                        <th>Nombre</th>
                        <th>Rut</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@($"{item.ApPaterno} {item.ApMaterno} {item.Nombres}")</td>
                            <td>@item.RutFormateado</td>
                            <td>@item.Fono</td>
                            <td>@item.Correo</td>
                            <td>
                                <span class="badge @((item.Estado ? "text-bg-success" : "text-bg-danger"))">
								    @(item.Estado ? "Activo" : "Inactivo")
							    </span></td>
                            <td>
                                <a href="javascript:void(0);"
                                   onclick="ModalGeneralXL('Editar Medico', '@Url.Action("Edit", "CliMedico", new { id = @item.IdMedico })');"
                                   class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdMedico" class="btn btn-info btn-sm me-2"><i class="bi bi-list-columns-reverse"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
	</div>
</div>

<script>
    new DataTable('#myTable', {
        language: {
			url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-CL.json',
		},
    })

	$("#BtnAgregar").click(function () {
		ModalGeneral('Crear Especialidad', '@Url.Action("Create", "CliMedico")');
	});
</script>
