@model Medipac.Areas.CLI.Data.DTO.DtoCliHistorialPaciente

@{
    ViewData["Title"] = "Editar Ficha";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Editar Ficha</h5>
    </div>
    @using (Html.BeginForm("Edit", "CliHistorialPaciente"))
    {
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdHistorialPaciente)
            @Html.HiddenFor(model => model.IdMedico)
            @Html.HiddenFor(model => model.IdPaciente)
            @Html.HiddenFor(model => model.FechaCreacion)
            @Html.HiddenFor(model => model.FechaHistorial)

            <div class="row mb-3">
                <div class="form-group col-md-4">
                    <label asp-for="Titulo" class="form-label">Nombres Paciente</label>
                    @Html.EditorFor(model => model.CliPacientes.Nombres, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                @disabled = true
                            }
                        })
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="FechaCreacion" class="form-label">Fecha Creación Ficha</label>
                    <input class="form-control" type="text" value="@Model.FechaCreacion.ToString("dd-MM-yyyy HH:mm:ss")" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    @Html.DropDownListFor(model => model.Estado, new SelectList(ViewBag.Estado, "Key", "Value"), new
                        {
                            @class = "form-select"
                        })
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                @Html.TextAreaFor(model => model.Historial, new
                    {
                        @class = "form-control",
                        rows = "4",
                        placeholder = "Ingrese una breve descripción de la ficha"
                    })
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="@Url.Action("VerHistorialesMedico", "CliHistorialPaciente", new { area = "CLI", id = @ViewData["IdUsuario"]})" class="btn btn-danger">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </div>
    }
    <div class="card-footer text-muted text-center">
        Edite los detalles de la ficha y guarde los cambios.
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea',
        language: 'es',
        browser_spellcheck: true, 
        plugins: [
            'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media', 'searchreplace', 'table', 'visualblocks', 'wordcount'
        ],
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>
