@model List<Medipac.Areas.CLI.ViewModels.HistorialMedicoViewModel>

@{
    ViewData["Title"] = "Historiales Creados";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Historiales Médicos</h5>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                No se encontraron historiales médicos para este médico.
            </div>
        }
        else
        {
            <table id="historialesTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha Creación Ficha</th>
                        <th>Paciente</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var historial in Model)
                    {
                        <tr>
                            <td>@historial.FechaHistorial</td>
                            <td>@historial.PacienteNombre</td>
                            <td>
                                <span class="badge @((historial.Estado == "Activo" ? "text-bg-success" : "text-bg-danger"))">
                                    @historial.Estado
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "CliHistorialPaciente", new { area = "CLI", id = historial.IdHistorial })"
                                   class="btn btn-outline-primary btn-sm me-2"
                                   data-bs-toggle="tooltip" data-bs-placement="top" title="Editar historial">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="javascript:void(0);"
                                   onclick="ModalGeneral('Eliminar Historial', '@Url.Action("Delete", "CliHistorialPaciente", new { area = "CLI", id = historial.IdHistorial })');"
                                   class="btn btn-outline-danger btn-sm"
                                   data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar historial">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="card-footer text-muted text-center">
        Total de Historiales: @(Model?.Count ?? 0)
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#historialesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json'
            }
        });

        // Inicializar tooltips de Bootstrap
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
    });
</script>
