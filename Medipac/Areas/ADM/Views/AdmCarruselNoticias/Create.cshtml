@model Medipac.Areas.ADM.Data.DTO.DtoCarruselNoticias

@{
    ViewData["Title"] = "Agregar Slider de Noticias";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Nuevo Slider de Noticias</h5>
        <a href="@Url.Action("Index", "AdmCarruselNoticias")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al listado
        </a>
    </div>
    @using (Html.BeginForm("Create", "AdmCarruselNoticias", FormMethod.Post))
    {
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdCarruselNoticias)

            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Subtitulo" class="form-label">Subtítulo</label>
                @Html.EditorFor(model => model.Subtitulo, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Subtitulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UrlImagen" class="form-label">URL de la Imagen</label>
                @Html.EditorFor(model => model.UrlImagen, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="UrlImagen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdNoticia" class="form-label">Noticia Asociada</label>
                @Html.DropDownListFor(model => model.IdNoticia, new SelectList(ViewBag.Noticias, "IdNoticia", "Titulo"), "Seleccione...", new { @class = "form-select" })
                <span asp-validation-for="IdNoticia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.Activo, new { @class = "form-check-label" })
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="@Url.Action("Index", "AdmCarruselNoticias")" class="btn btn-danger">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </div>
    }
    <div class="card-footer text-muted text-center">
        Complete el formulario para agregar un nuevo slider de noticias.
    </div>
</div>
