@model Medipac.Models.ComUsuario
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header">
        <h5 class="card-title mb-0">Eliminar Usuario</h5>
    </div>
    <div class="card-body">
        <p>¿Está seguro de que desea eliminar al usuario <strong>@Model.UserName</strong>?</p>
        @using (Html.BeginForm("DeleteConfirmed", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
        }
    </div>
    <div class="card-footer text-muted text-center">
        Esta acción no se puede deshacer.
    </div>
</div>
