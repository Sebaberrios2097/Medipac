@model Medipac.Models.ComUsuario
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Editar Usuario</h5>
        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al Listado
        </a>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="form-group mb-3">
                <label for="userName" class="form-label">Nombre de Usuario</label>
                <input type="text" name="userName" class="form-control" value="@Model.UserName" required />
            </div>
            <div class="form-group mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" name="email" class="form-control" value="@Model.Email" required />
            </div>
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-danger">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        }
    </div>
    <div class="card-footer text-muted text-center">
        Realice los cambios necesarios y guarde el usuario.
    </div>
</div>
