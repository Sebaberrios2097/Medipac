@model Medipac.Models.ComUsuario

@using (Html.BeginForm("Bloquear", "Usuarios"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Id)

    <div class="modal-body">
        <div class="mb-3">
            <h5>¿Estás seguro que deseas bloquear a este usuario?</h5>
            <h6>Puedes desbloquearlo en cualquier momento</h6>
            <label for="tiempoBloqueo" class="form-label">Tiempo de Bloqueo</label>
            <input id="tiempoBloqueo" name="tiempoBloqueo" class="form-control" placeholder="Introduce el tiempo de bloqueo (Meses)" type="number" />
        </div>
    </div>

    <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <input type="submit" class="btn btn-danger" value="Bloquear" />
    </div>
}
