@model Medipac.Areas.ADM.Data.DTO.DtoNoticias

@{
    ViewData["Title"] = "Editar Noticia";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1 class="mt-3 text-center display-4">@ViewData["Title"]</h1>
<hr />

<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Nueva Noticia</h5>
        <a href="@Url.Action("Index", "AdmNoticias")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al Listado
        </a>
    </div>
    @using (Html.BeginForm("Edit", "AdmNoticias"))
    {
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdNoticia)
            @Html.HiddenFor(model => model.IdUsuario)

            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    @Html.EditorFor(model => model.Titulo, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control"
                            }
                        })
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Subtitulo" class="form-label">Subtítulo</label>
                    @Html.EditorFor(model => model.Subtitulo, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control"
                            }
                        })
                    <span asp-validation-for="Subtitulo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contenido" class="form-label">Contenido</label>
                @Html.TextAreaFor(model => model.Contenido, new
                    {
                        @class = "form-control",
                        rows = "5",
                        placeholder = "Ingrese el contenido de la noticia"
                    })
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UrlImagen" class="form-label">URL de la Imagen</label>
                @Html.EditorFor(model => model.UrlImagen, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control"
                        }
                    })
                <span asp-validation-for="UrlImagen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                @Html.CheckBoxFor(model => model.Activo, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.Activo, new { @class = "form-check-label" })
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="@Url.Action("Index", "AdmNoticias")" class="btn btn-danger">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </div>
    }
    <div class="card-footer text-muted text-center">
        Complete el formulario para agregar una nueva noticia.
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea',
        language: 'es',  // Configura el idioma a español
        browser_spellcheck: true,  // Activa el corrector ortográfico del navegador
        plugins: [
            'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media', 'searchreplace', 'table', 'visualblocks', 'wordcount'
        ],
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>


