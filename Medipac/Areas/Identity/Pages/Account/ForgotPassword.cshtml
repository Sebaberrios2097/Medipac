@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container my-5">
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-key"></i>
            <h2>Recuperar Contraseña</h2>
            <p class="text-muted">Ingresa tu correo electrónico para restablecer tu contraseña</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="correo@ejemplo.com" required />
                <label asp-for="Input.Email">Correo Electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login">Restablecer Contraseña</button>
        </form>

        <div class="login-footer">
            <p><a asp-area="Identity" asp-page="/Account/Login">Regresar a Iniciar Sesión</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
