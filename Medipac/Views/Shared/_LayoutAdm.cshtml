<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medipac</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato&display=swap" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css">


    @*JS*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>

    <script src="~/js/site.js"></script>
</head>
<body>

    <main>
        <div class="d-none d-md-flex nav-main">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-pag">
                <a href="/" class="navbar-logo text-white">
                    Panel de Gestión
                </a>
                <hr>
                <a href="#" class="d-flex align-items-center text-white text-decoration-none " id="dropdownUser1" aria-expanded="false">
                    <i class="bi bi-person-circle" style="padding-right:10px"></i>
                    <strong>Sebastián Berríos G.</strong>
                </a>
                <hr />
                <ul class="nav nav-pills flex-column mb-auto">

                    <li>
                        <button class="btn btn-toggle align-items-center rounded collapsed nav-link text-white nohover"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse-armed"
                                aria-expanded="@((ViewData["ActivePage"] as string) == "Lista de Médicos" || (ViewData["ActivePage"] as string) == "GestionarEspecialidades" ? "true" : "false")">
                            <i class="bi bi-newspaper" style="padding-right:10px"></i>
                            Gestión del Área Médica
                        </button>
                        <div class="collapse @((ViewData["ActivePage"] as string) == "Lista de Médicos" || (ViewData["ActivePage"] as string) == "GestionarEspecialidades" ? "show" : "")" id="collapse-armed">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                <li>
                                    <a asp-area="CLI" asp-controller="CliMedico" asp-action="Index"
                                       class="nav-link text-white @((ViewData["ActivePage"] as string) == "Lista de Médicos" ? "active" : "")"
                                       aria-current="page">Lista de Médicos</a>
                                </li>
                                <li>
                                    <a asp-area="RES" asp-controller="ResEspecialidades" asp-action="Index"
                                       class="nav-link text-white @((ViewData["ActivePage"] as string) == "GestionarEspecialidades" ? "active" : "")"
                                       aria-current="page">Gestionar Especialidades</a>
                                </li>
                                <li><a href="#" class="nav-link text-white rounded">Especialidades por Médico</a></li>
                                <li><a href="#" class="nav-link text-white rounded">Administrar Tipos Exámenes</a></li>
                            </ul>
                        </div>
                    </li>

                    <li>
                        <button class="btn btn-toggle align-items-center rounded collapsed nav-link text-white nohover" data-bs-toggle="collapse" data-bs-target="#collapse-arpac" aria-expanded="false">
                            <i class="bi bi-newspaper" style="padding-right:10px"></i>
                            Gestión del Área de Pacientes
                        </button>
                        <div class="collapse" id="collapse-arpac">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                <li><a href="#" class="nav-link text-white rounded">Buscar Pacientes</a></li>
                                @* <li><a href="#" class="nav-link text-white rounded">Gestionar Carruseles</a></li> *@
                            </ul>
                        </div>
                    <li>
                        <button class="btn btn-toggle align-items-center rounded collapsed nav-link text-white nohover" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                            <i class="bi bi-newspaper" style="padding-right:10px"></i>
                            Noticias
                        </button>
                        <div class="collapse" id="dashboard-collapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                <li><a href="#" class="nav-link text-white rounded">Gestionar Noticias</a></li>
                                <li><a href="#" class="nav-link text-white rounded">Gestionar Carruseles</a></li>
                            </ul>
                        </div>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a asp-area="COM" asp-controller="ComUsuario" asp-action="Index" class="nav-link text-white" aria-current="page">
                            <i class="bi bi-person-lines-fill" style="padding-right:10px"></i>
                            Gestionar Usuarios
                        </a>
                    </li>
                    @*                     <li class="nav-item">
                    <a asp-controller="" asp-action="" class="nav-link text-white" aria-current="page">
                    <i class="bi bi-inboxes-fill" style="padding-right:10px"></i>
                    Botón 3
                    </a>
                    </li> *@
                </ul>
                <ul class="nav">
                    <li>
                        <a asp-controller="" asp-action="" class="nav-link text-white">
                            <i class="bi bi-arrow-return-left" style="padding-right:10px"></i>
                            Volver al Inicio
                        </a>
                    </li>
                </ul>
            </div>
        </div>


        <div class="container-fluid overflow-auto vh-100">
            <div class="row justify-content-center">
                <div class="col-11">
                    @RenderBody()
                </div>
            </div>

            @await Html.PartialAsync("Mensajes")
        </div>
    </main>

</body>
</html>
